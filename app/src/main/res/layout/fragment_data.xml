<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp"
    android:id="@+id/container"
    android:background="@color/blue"
    tools:context=".DataFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsextra"
                android:text="DATA PENDAPATAN"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@color/black"/>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/card">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pendapatan Mobil"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            style="@style/text_style"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Tanggal " />

                        <TextView
                            style="@style/text_style"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text=": " />

                        <TextView
                            android:id="@+id/tv_tanggal"
                            style="@style/text_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="false"
                            android:text="ini tanggal" />
                    </LinearLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_style"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Total " />

                        <TextView
                            style="@style/text_style"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text=": " />

                        <TextView
                            android:id="@+id/tv_total"
                            style="@style/text_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="false"
                            android:text="ini total" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/card">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pendapatan Motor"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            style="@style/text_style"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Tanggal " />

                        <TextView
                            style="@style/text_style"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text=": " />

                        <TextView
                            android:id="@+id/tv_mtanggal"
                            style="@style/text_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="false"
                            android:text="ini tanggal" />
                    </LinearLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_style"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Total " />

                        <TextView
                            style="@style/text_style"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text=": " />

                        <TextView
                            android:id="@+id/tv_mtotal"
                            style="@style/text_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="false"
                            android:text="ini total" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsextra"
                android:text="DATA PENGUNJUNG"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@color/black"/>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_gravity="center">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_pengunjung"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>